# Farmart Backend Environment Configuration

# Project
PROJECT_NAME=Farmart
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Database (SQLite for development)
DATABASE_URL=sqlite+aiosqlite:///./farmart.db

# For PostgreSQL (uncomment and configure for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/farmart

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Middleware
ENABLE_GZIP=true
